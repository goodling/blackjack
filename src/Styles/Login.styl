.login {
    position: relative;
    padding: rem(16);
    max-width: rem(500px);
    margin: 0 auto;
    margin-top: rem(100px);
    background: $felt-table-top;                                       // Color variables
    gameFont();

    .login__header {
        margin-bottom: 1em;
    }

    .login__sub-header {
        margin: 1em 0;
    }

    input[type=text],
    input[type=password] {
        display: block;
        margin-bottom: rem(16);
        border: 2px solid darkgreen;
        width: 100%;
    }

    .login__cards {
        position: absolute;
        top: rem(-45);
        right: rem(100);
    }
}