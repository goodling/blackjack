html {
  font-size: $rem-base;
  background-color: #000;
}

html,
body {
  width: 100%;
  min-height: 100%;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  overflow-x: hidden;
}

* {
  box-sizing: border-box;

  &:before,
  &:after {
    box-sizing: inherit;
  }
}

input[type=text],
input[type=password] {
  line-height: 3em;
  font-family: inherit;
  padding: 0 1em;
}

button {
    border: none
    font-size: 1em
    cursor: pointer
    padding: rem(8 16)
    background: $white
    gameButtonFont();
    border-radius: rem(5);
    transition: background 250ms ease

    &:hover {
    background: $gray--100
    }

    &:disabled {
    color: $gray--300;
    background-color: $gray--100;
    }
}